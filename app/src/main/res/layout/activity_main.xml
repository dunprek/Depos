<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etBaseInvestment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Nominal Investasi anda"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />


    <EditText
        android:id="@+id/etRatePerYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Rate Per Year"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />



    <EditText
        android:id="@+id/etInvestmentTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukan Target Investasi anda"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tvInterestMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#D16262"
        android:textSize="20sp"
        tools:text="10000" />

    <TextView
        android:id="@+id/tvInterestInYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#D16262"
        android:textSize="20sp"
        tools:text="500000" />

    <TextView
        android:id="@+id/tvInitialMoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#D16262"
        android:textSize="20sp"
        tools:text="500000" />

    <Button
        android:layout_marginTop="8dp"
        android:id="@+id/btnCount"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRatePerYear" />
</LinearLayout>